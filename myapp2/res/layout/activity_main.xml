<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
     >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
   
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@android:id/tabcontent"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/widget_layout_red"
            android:background="#000000"
            android:orientation="vertical"
            ></LinearLayout>
        
        
        
    </FrameLayout>
     <TabWidget 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabs">
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear1"
            android:background="@drawable/detail_dialog_bg"
            android:orientation="horizontal">
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab1"
			android:layout_weight="1"
            android:orientation="vertical"
            
            
            >
                <ImageView 
                    android:id="@+id/image1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_1_n"
                    android:layout_weight="1"/>
           <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="首页"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff" />
             </LinearLayout>
        
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab2"
			android:layout_weight="1"
            android:orientation="vertical"
            >
             <ImageView 
                    android:id="@+id/image2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_2_n"
                    android:layout_weight="1"/>
           <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="分类"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff" />
             </LinearLayout> 
                  

		<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab3"
			android:layout_weight="1"
            android:orientation="vertical"
            >
             <ImageView 
                    android:id="@+id/image3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_3_n"
                    android:layout_weight="1"/>
           <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="搜索"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff" />
             </LinearLayout> 
             
		<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab4"
			android:layout_weight="1"
            android:orientation="vertical"
            >
             <ImageView 
                    android:id="@+id/image4"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_4_n"
                    android:layout_weight="1"/>
           <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff" />
             </LinearLayout> 
             
		<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab5"
			android:layout_weight="1"
            android:orientation="vertical"
            >
             <ImageView 
                    android:id="@+id/image5"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:src="@drawable/icon_5_n"
                    android:layout_weight="1"/>
           <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="更多"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff" />
             </LinearLayout> 
               </LinearLayout>
        
               
            
        
        
        </TabWidget>
    
</LinearLayout>
</TabHost>
